<%= simple_form_for(@chirp) do |f| %>
  <%= f.error_notification %>
  <div class="field">
    <div class="control">
      <%= f.input :chirp, label: "What are the birds saying?", input_html: { class: "textarea "}, wrapper: false, label_html: {class: "label"}, placeholder: "Write a Chirp..." %>
    </div>
  </div>
  <%= f.button :submit, class: "button is-info" %>
<% end %>
